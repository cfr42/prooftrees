\begin{document}
\START
\TEST{utils: align middle child(ren)}{%
% ateb: https://tex.stackexchange.com/a/436985/ addaswyd o gwestiwn A. D: https://tex.stackexchange.com/q/436881/
  \begin{forest}
    align middle children
    [top, s sep=1cm
      [A, child anchor=90]
      [B]
      [{CDDDDDDDD}, parent anchor=-10
        [A]
        [B]
        [C]
        [D]
        [E]     
      ]
    ]
  \end{forest}
  \showbox\mybox
}
\OMIT
\box\mybox
\TIMO
\TEST{utils: align middle children + linguistics}{%
% ateb: https://tex.stackexchange.com/a/717680/ addaswyd o ateb Alan Munn: https://tex.stackexchange.com/a/717669/ i gwestiwn Andrea: https://tex.stackexchange.com/q/717656/
  \OMIT
  \forestapplylibrarydefaults{linguistics}
  \TIMO
  \begin{forest}
    align middle children,
    [$\omega$,s sep'=1cm[$\phi$,s sep'=1cm[$\theta$[C][D][Fl][E][$\chi$[O][Ve]][F]][Q(?)][M]][$\beta$,s sep'=1cm[$\gamma$[W][$\sigma$[V][Z]][B(?)]][$\delta$[$\varepsilon$[P][U][$\eta$[R][T]]][S]]]]
  \end{forest}
  \showbox\mybox
}
\OMIT
\box\mybox
\TIMO
\TEST{utils: outer label}{%
  \begin{forest}
    [A [B[D,outer label=d]][C,outer label={c,outer label}:{anchor=base west,font=\sffamily,text=blue}]]
  \end{forest}
  \showbox\mybox
}
\OMIT
\box\mybox
\TIMO
\TEST{utils: outer labels at}{%
  \begin{forest}
    outer labels at=west,
    outer labels={anchor=base east,text=magenta},
    [A [B[D,outer label=d]][C,outer label={c,outer label}:{anchor=north east,font=\sffamily,text=blue}]]
  \end{forest}
  \showbox\mybox
}
\OMIT
